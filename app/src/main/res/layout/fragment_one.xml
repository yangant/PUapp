<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/beijingone">


    <TextView
        android:id="@+id/playerID"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="90dp"
        android:text="与天争锋"
        android:textSize="25dp"
        android:textColor="#FFFF"
        android:fontFamily="@font/bigblack"
        android:ems="1"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="240dp"
        android:text="LV99"
        android:textSize="20dp"
        android:textColor="#66CD00"
        android:fontFamily="@font/bigblack"
        android:textAlignment="center"/>

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/powerbar"
        android:layout_width="232dp"
        android:layout_height="6dp"
        android:progress="50"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="303dp"
        android:progressDrawable="@drawable/progress_drawable"/>

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/intellbar"
        android:layout_width="232dp"
        android:layout_height="6dp"
        android:progress="30"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="371dp"
        android:progressDrawable="@drawable/progress_drawable"/>

    <ProgressBar
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:id="@+id/charmbar"
        android:layout_width="232dp"
        android:layout_height="6dp"
        android:progress="85"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="436dp"
        android:progressDrawable="@drawable/progress_drawable"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="武力值"
    android:textColor="#FFFF"
    android:layout_marginTop="280dp"
    android:layout_marginLeft="280dp"
    android:textSize="12dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="智力值"
        android:textColor="#FFFF"
        android:layout_marginTop="350dp"
        android:layout_marginLeft="280dp"
        android:textSize="12dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="魅力值"
        android:textColor="#FFFF"
        android:layout_marginTop="415dp"
        android:layout_marginLeft="280dp"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/powerlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="20dp"
        android:layout_marginTop="283dp"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/bigblack"
        android:textColor="#FFFF"/>

    <TextView
        android:id="@+id/intelllevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="20dp"
        android:layout_marginTop="355dp"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/bigblack"
        android:textColor="#FFFF"/>

    <TextView
        android:id="@+id/charmlevel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="20dp"
        android:layout_marginTop="419dp"
        android:layout_marginLeft="60dp"
        android:fontFamily="@font/bigblack"
        android:textColor="#FFFF"/>


</FrameLayout>